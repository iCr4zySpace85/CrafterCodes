@model CrafterCodes.Models.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "SportSync Login";
}

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inicio de Sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styleLogin.css">
    <script src="https://kit.fontawesome.com/dd5e6670f4.js" crossorigin="anonymous"></script>
    <script src="~/js/jquery-3.6.4.min.js"></script>
    <script src="~/js/Inicio/validLogin-Pass.js"></script>
  </head>
  <body>

    <div class="lienzo">
      <div class="container w-100">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 text-center">
                    <h1 class="fw-bold text-center" style="color:rgb(150, 0, 0)">SportSync</h1><br>

                    <form asp-action="Login" method="post" asp-controller="Home" class="shadow-lg p-4 rounded-5" style="background-color:rgb(150, 0, 0)" id="login">
                        <div class="form-group ">
                            <div class="text-center">

                                <div class="form-floating">
                                    <input type="text" class="form-control mt-2" id="Username" asp-for="Username" placeholder="name@example.com" required>
                                    <label for="Username">Nombre de usuario</label>
                                    <div class="invalid-feedback text-light">Por favor, escribe un nombre de usuario <i class="fa-solid fa-triangle-exclamation"></i></div>
                                    @*<span asp-validation-for="Username" class="text-danger"></span>*@
                                </div><br>

                                <div class="form-floating">
                                    <input type="password" class="form-control mt-2" id="Pass" asp-for="Pass" placeholder="Password" minlength="5" maxlength="20" required>
                                    <label for="Pass">Contraseña</label>
                                    <div class="invalid-feedback text-light">Por favor, escribe una contraseña <i class="fa-solid fa-triangle-exclamation"></i></div>
                                    @*<span asp-validation-for="Pass" class="text-danger"></span>*@
                                </div>
                                <div class="text-center form-floating">
                                    <div class="text-end mt-2">
                                        <a asp-action="Recuperar" asp-controller="Home" class="text-light">¿Olvidaste tu contraseña?</a>
                                    </div>
                                </div>

                            </div><br>
                            <div class="text-center">
                                <button class="btnLogeo" type="submit" id="btnLogin">Inicio de Sesión</button>
                            </div>

                        </div>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="text-danger text-center">@ViewBag.Error</div>
                    }

                    <p class="mt-5 mb-3 text-muted">&copy; 2023 CrafterCodes, todos los derechos reservados.</p>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
    </div>

   <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  
  </body>
</html>